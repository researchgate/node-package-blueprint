{
  "name": "@researchgate/node-package-blueprint",
  "version": "0.1.1",
  "description": "Blueprint for scaffolding new node packages",
  "main": "lib/js/index.js",
  "scripts": {
    "build": "run-s build:*",
    "build:dist": "run-s build:dist:*",
    "build:dist:css": "node-sass --include-path ./node_modules ./src/scss --output ./dist/css",
    "build:dist:postcss": "postcss ./dist/css/*.css -r -c .postcss.config.js",
    "build:lib": "run-s build:lib:*",
    "build:lib:js": "echo build:lib:js",
    "build:lib:es": "echo build:lib:es",
    "build:lib:scss": "cpx \"./src/scss/**/*.scss\" ./lib/scss",
    "clean": "run-s clean:*",
    "clean:build": "echo clean:build",
    "clean:dist": "echo clean:dist",
    "clean:lib": "rimraf ./lib",
    "coverage": "echo coverage",
    "format": "eslint --fix",
    "generate": "echo generate",
    "lint": "run-s lint:*",
    "lint:scss": "stylelint --config .stylelintrc.js --syntax scss ./src/scss/**/*.scss",
    "lint:json": "echo lint:json",
    "lint:js": "eslint {src}/.",
    "precommit": "run-s lint test",
    "prepare": "run-s clean generate build",
    "prepublishOnly": "run-s test",
    "test": "jest",
    "watch": "run-p watch:*",
    "watch:scss": "npm run build:dist:css -- --watch & npm run build:dist:postcss -- --poll=10 -w & npm run build:lib:scss -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/researchgate/node-package-blueprint.git"
  },
  "keywords": ["node", "npm", "scaffold"],
  "author": "Roland Loesslein <roland.loesslein@researchgate.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/researchgate/node-package-blueprint/issues"
  },
  "homepage": "https://github.com/researchgate/node-package-blueprint#readme",
  "devDependencies": {
    "autoprefixer": "^7.1.3",
    "babel-eslint": "^7.2.3",
    "cpx": "^1.5.0",
    "cssnano": "^3.10.0",
    "eslint": "^4.5.0",
    "eslint-plugin-prettier": "^2.2.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.0",
    "prettier": "^1.6.1",
    "react": "^0.14.0 || ^15.0.0",
    "react-dom": "^0.14.0 || ^15.0.0",
    "rimraf": "^2.6.1",
    "stylelint": "^8.0.0",
    "stylelint-order": "^0.6.0",
    "stylelint-scss": "^2.1.0"
  },
  "dependencies": {
    "@researchgate/babel-preset-rg": "^1.0.1",
    "normalize-scss": "^7.0.0"
  }
}
