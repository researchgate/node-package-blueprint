{
  "env": {
    "node": true,
    "browser": true
  },
  "plugins": [
    "prettier"
  ],
  "parser": "babel-eslint",
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "parser": "babylon",
        "printWidth": 120,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all",
        "useTabs": false
      }
    ]
  },
  "overrides": [
    {
      "files": "*.json",
      "parser": "json",
      "rules": {
        "prettier/prettier": [
          "error",
          {
            "tabWidth": 2
          }
        ]
      }
    }
  ]
}
